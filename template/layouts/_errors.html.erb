<%  
  object ||= nil
%>

<% if object.present? %>
  <% if object.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading"><%= t('common.save_error') %></div>
      <div class="panel-body">
        <ul class="errors">
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
<% end %>
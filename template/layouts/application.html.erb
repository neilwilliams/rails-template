<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= content_for?(:title) ? yield(:title) : "Boilerplate" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Boilerplate" %>" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />     
    <link rel="stylesheet" href="/css/font-awesome.min.css" type="text/css" media="screen" />
    <link rel="stylesheet" href="/css/main.min.css" type="text/css" media="screen" />  
    
    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
      <header>
        <nav class="navbar navbar-inverse navbar-fixed-top">
          <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
            <%= link_to t("header.home.index"), home_index_path, class: 'navbar-brand' %>
          </div>
          <div class="collapse navbar-collapse">        
            <ul class="nav navbar-nav">
              <%= render 'layouts/navigation_links' %>
            </ul>
            <%# Login / Logout Block %>
            <ul class="nav navbar-nav navbar-right">
              <li><%= t("header.logout") %></li>
              <li class="navbar-text"><i class="fa fa-user fa-lg"></i>&nbsp;&nbsp;Current User</li>
            </ul>
          </div>
        </nav>
      </header>
      <main role="main">
         <%= render 'layouts/messages' %>
         <div class="page-header">
           <h1>
             <%= yield :header %>
             <% if content_for?(:header_small) %>
               <small>
                 <%= yield :header_small %>
               </small>
             <% end %>
           </h1>
         </div>
         <div class="container-fluid">
           <%= yield %>
         </div>
      </main>
            
      <script src="/js/jquery.min.js" type="text/javascript" charset="utf-8"></script>
      <script src="/js/bootstrap.min.js" type="text/javascript" charset="utf-8"></script>    
      <%= javascript_include_tag 'application' %>
    </body>
</html>
